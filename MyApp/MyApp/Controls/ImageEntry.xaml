<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="MyApp.Controls.ImageEntry">
  <Grid x:Name="RootGrid">
    <Entry Placeholder="{Binding Hint}" 
           IsPassword="{Binding IsPass}"
           Text="{Binding Text}" />
    <Image Source="{Binding ImageSource}" HorizontalOptions="End"></Image>
  </Grid>
</ContentView>
